@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 style="color: rgb(4,59,92);
        padding-left: 350px;">
    @ViewData["Title"]
</h3>


<p style="color : #FFD700" class="mt-5">
    <strong> <i class="bi bi-exclamation-octagon" style="padding-right : 10px"></i>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>


<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3 mt-2">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-20 btn btn-outline-danger mt-5" style="margin-left: 350px;" type="submit">Delete data and close my account</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
