@{
    @model ContactUS
    <section class="spacer"></section>

    <section id="contact" class="contact">
      <div class="container">

        <div class="section-title">
          <h2>Contact</h2>
                <p>We value your feedback and are here to assist you with any questions or concerns. Whether you have a news tip, need support, or wish to advertise with us, please don't hesitate to get in touch. Alternatively, fill out the contact form below, and our team will respond to you promptly. Thank you for choosing News Nexus as your trusted source for the latest news and updates.</p>
        </div>

      </div>



      <div class="container">

        <div class="row mt-5">

          <div class="col-lg-6">

            <div class="row">
              <div class="col-md-12">
                
              </div>
              <div class="col-md-6">
                <div class="info-box mt-4">
                  <i class="bx bx-envelope"></i>
                  <h3>Email Us</h3>
                  <p>info@example.com<br>contact@example.com</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-box mt-4">
                  <i class="bx bx-phone-call"></i>
                  <h3>Call Us</h3>
                  <p>+1 5589 55488 55<br>+1 6678 254445 41</p>
                </div>
              </div>
            </div>

          </div>

          <div class="col-lg-6">
            <form asp-action="saveContact" >
              <div class="row">
                <div class="col-md-6 form-group">
                  <input type="text" asp-for="Name" class="form-control"  placeholder="Your Name" required="">
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <input type="email" class="form-control" asp-for="Email" placeholder="Your Email" required="">
                </div>
              </div>
              <div class="form-group mt-3">
                  <input type="text" class="form-control" asp-for="Subject" placeholder="Subject" required="">
              </div>
              <div class="form-group mt-3">
                 <textarea class="form-control" asp-for="Message" rows="7" placeholder="Message" required=""></textarea>
              </div>
          
                        <div class="text-center"><button class="appointment-btn" type="submit">Send Message</button></div>
            </form>
          </div>

        </div>

      </div>
    </section>

}
<style>
    .spacer {
        height: 100px; /* Adjust this value to increase or decrease the space */
    }

    .contact .info-box {
        text-align: center;
    }

    .contact .php-email-form {
        width: 100%;
    }
</style>